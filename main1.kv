        Screen:
            name: 'people'
            id: people
            on_enter:
                peopleno.text = '?'
                peopleya.text = '?'
                root.startScreenTiming()
            on_pre_enter:
                root.read_server_status()
            on_pre_leave: root.finishScreenTiming()
            on_touch_down: _screen_manager.current = 'infolist'

            BoxLayout:
                orientation: 'vertical'

                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        text: 'Nepritomni'
                        font_size: self.height/4
                        color: 0.3,0.6,0.9,0.9
                    Label:
                        text: '0'
                        id: peopleno
                        font_size: self.height/4
                        color: 0.3,0.6,0.9,0.9
