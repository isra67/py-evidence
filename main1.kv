#: import smn kivy.uix.screenmanager
#: import math math


<Evidence>:
    ScreenManager:
        size_hint: 1, 1
        id: _screen_manager
        transition: smn.NoTransition() #FadeTransition()

        Screen:
            name: 'clock'
            id: clock
            on_touch_down: _screen_manager.current = 'people'
            BoxLayout:
#                DigiClockWidget:
                MyClockWidget:

        Screen:
            name: 'people'
            id: people
            on_enter:
                peopleno.text = '?'
                peopleya.text = '?'
                root.startScreenTiming()
            on_pre_enter:
                root.read_server_status()
            on_pre_leave: root.finishScreenTiming()
            on_touch_down: _screen_manager.current = 'clock'

            BoxLayout:
                orientation: 'vertical'

                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        text: 'Nepritomni'
                        font_size: self.height/4
                        color: 0.3,0.6,0.9,0.9
                    Label:
                        text: '0'
                        id: peopleno
                        font_size: self.height/4
                        color: 0.3,0.6,0.9,0.9
                BoxLayout:
                    orientation: 'horizontal'
                    Label:
                        text: 'Pritomni'
                        font_size: self.height/4
                        color: 0.3,0.9,0.6,0.9
                    Label:
                        text: '0'
                        id: peopleya
                        font_size: self.height/4
                        color: 0.3,0.9,0.6,0.9

        Screen:
            name: 'waitscr'
            id: waitscr
            on_enter: lblresult.text = 'Moment...'
            on_pre_leave: root.finishScreenTiming()
            on_touch_down: _screen_manager.current = 'clock'

            BoxLayout:
                orientation: 'vertical'

                Label:
                    text: 'Oznam:'
                    font_size: self.height/5
                    color: 0.6,0.6,0.6,0.9
                Label:
                    text: ''
                    id: lblresult
                    font_size: self.height/3
                    color: 0.9,0.9,0.9,0.9
                Label:
                    text: ''
                    font_size: self.height/5
                    color: 0.6,0.6,0.6,0.9

        Screen:
            name: 'events'
            id: events
            on_enter: root.startScreenTiming()
            on_pre_leave: root.finishScreenTiming()

            BoxLayout:
                orientation: 'vertical'

                BoxLayout:
                    DigiClockWidget:

                    Label:
                        text: 'Inoteska'
                        font_size: self.height/3
                        color: 0.3,0.6,0.9,0.9

                BoxLayout:
                    Button:
                        text: 'Prichod'
                        font_size: 24
                        color: 0,0.9,0,0.9
                        on_press: root.processEvent('1')
                    Button:
                        text: 'Prichod sluzobne'
                        font_size: 24
                        color: 0,0.9,0,0.9
                        on_press: root.processEvent('5')
                    Button:
                        text: 'Prichod lekar'
                        font_size: 24
                        color: 0,0.9,0,0.9
                        on_press: root.processEvent('7')
                    Button:
                        text: 'Prichod obed'
                        font_size: 24
                        color: 0,0.9,0,0.9
                        on_press: root.processEvent('9')

                BoxLayout:
                    Button:
                        text: 'Odchod'
                        font_size: 24
                        color: 0,0.6,0.9,0.9
                        on_press: root.processEvent('0')
                    Button:
                        text: 'Odchod sluzobne'
                        font_size: 24
                        color: 0,0.6,0.9,0.9
                        on_press: root.processEvent('4')
                    Button:
                        text: 'Odchod lekar'
                        font_size: 24
                        color: 0,0.6,0.9,0.9
                        on_press: root.processEvent('6')
                    Button:
                        text: 'Odchod obed'
                        font_size: 24
                        color: 0,0.6,0.9,0.9
                        on_press: root.processEvent('8')

                BoxLayout:


#CLOCK:

<DigiClockWidget>:
    DigiClock:
        font_size: self.height/5
        color: 0.3,0.6,0.9,0.9


[ClockNumber@Label]:
    text: str(ctx.i)
    pos_hint: {"center_x": 0.5+0.42*math.sin(math.pi/6*(ctx.i-12)), "center_y": 0.5+0.42*math.cos(math.pi/6*(ctx.i-12))}
    font_size: self.height/10
    color: 0,0,0.6,0.9

